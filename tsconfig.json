{
  "compilerOptions": {
    "strict": false,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es5",
    "allowJs": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "importHelpers": true
  },
  "include": ["./src/index.ts"],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.spec.json"
      }
    }
  }
}
